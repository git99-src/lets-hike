  </div>
</nav>
<div class="hero-image-top">
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      <h2>Search for a trail</h2>
      <form id="search-form">
        <div class="form-group">
          <label for="search-input">Search by City or Zip Code</label>
          <input type="text" class="form-control" id="search-input">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default">Find your next great hike</button>
      </form>
      <br />
      <h2>Let's Hike</h2>
      <ul class="list-group hike-list">
        {{#each hikes}}
        <div class="card">
          <li>
              <a target="_blank" href={{url}}><h3>{{name}}</h3></a>
              <br>

              <a target="_blank" href={{url}}><img src={{imgSqSmall}} alt={{name}}></a>
              <p>{{location}}</p>
              <p>Summary: {{this.hikes.summary}}</p>
              <p>Trail Length: {{this.hikes.length}}</p>
              <p>Trail Ascent: {{this.hikes.ascent}}</p>
              <p>Current Trail Conditions: {{this.hikes.location}}</p>


              {{!-- {{this.trails.name}} {{this.trails.summary}} {{this.trails.length}} {{this.hikeBaseURL}} --}}
              </li>
        </div>       
       {{/each}}
      </ul>
    </div>
  </div>
</div>

<script type="text/javascript" src="js/search.js"></script>