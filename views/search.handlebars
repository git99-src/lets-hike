<nav class="navbar navbar-expand-md">
  <a class="navbar-brand" href="#">Let's Hike</a>
  <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="main-navigation">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/members">My Account</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
      </li>
    </ul>
  </div>
</nav>
<div class="hero-image-top">
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto col-sm-12">
      <h2>Search for a trail</h2>
      <form id="search-form">
        <div class="form-group">
          <label for="search-input">Search by City or Zip Code</label>
          <input type="text" class="form-control" id="search-input">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default">Find your next great hike</button>
      </form>
      <br />
      <h2>Let's Hike</h2>
      <ul class="list-group hike-list">
        {{#each hikes}}
        <li class="media">
          <a target="_blank" href={{url}}><img src={{imgSqSmall}} alt={{name}} class="align-self-center mr-3"
              style="width:100px"></a>
          <div class="media-body">
            <h4 class="mt-0 mb-1">{{name}}</h4>
            <small><i>{{location}}</i></small>
            <p>{{summary}}</p>
            <small>Trail Length: {{length}}</small>
            <small>Trail Ascent: {{ascent}}</small>
            <small>Current Trail Conditions: {{conditionStatus}}</small>
            <p class="read-more"><a href={{url}}>more details...</a></p>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<script type="text/javascript" src="js/search.js"></script>